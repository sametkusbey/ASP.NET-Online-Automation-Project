@using OnlineAutomationProject.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>

<div style="background-color:darkgray">

</div>
<br />
<table class="table table-hover">
    <tr>
        <th>Personel ID</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Personel Görsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var pers in Model)
    {
        <tr>
            <td>@pers.Personelid </td>
            <td>@pers.PersonelAd </td>
            <td>@pers.PersonelSoyad </td>
            <td>@pers.PersonelGorsel </td>
            <td><a href="/Departman/DepartmanPersonelSatis/@pers.Personelid  " class="btn btn-danger">SATIŞLAR</a></td>
        </tr>
    }

</table>